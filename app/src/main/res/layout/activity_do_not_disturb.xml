<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3F51B5"
    tools:context=".fragments.profile.DoNotDisturbActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_back_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_saver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vector_back_gray"/>

            <TextView
                android:id="@+id/back_saver_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#81D997"
                android:layout_marginStart="20dp"
                android:textSize="25sp"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/lr4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/screen_padding_5"
        android:layout_marginStart="@dimen/screen_padding_5"
        android:layout_marginEnd="@dimen/screen_padding_5"
        android:layout_marginTop="@dimen/screen_padding_5"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/rlDND"
            style="@style/Ripple"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEnable"
                    style="@style/rowAlonetvt"
                    android:textColor="@color/white"
                    android:text="enabled" />

            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swDND"
                style="@style/swStyle"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_DND_start"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            style="@style/Ripple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DND_start"
                    style="@style/rowAlonetvt"
                    android:text="Start Time"
                    android:textColor="@color/white"/>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_DND_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="22:00"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/text_details" />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:paddingStart="15dp"
            android:id="@+id/rl_DND_stop"
            style="@style/Ripple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_DND_stop"
                    style="@style/rowAlonetvt"
                    android:text="End Time"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_DND_stop_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="08:00"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/text_details" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>